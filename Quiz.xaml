<Window x:Class="Proiect_bun.Quiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Quiz" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <StackPanel Grid.Row="1" Name="questionPanel" Margin="20">
            <!-- Questions will be added dynamically here -->

        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10"></StackPanel>
        <Button x:Name="nextButton" Content="NEXT" Margin="571,222,106,74" Click="NextButton_Click" Grid.Row="1" FontSize="18" FontFamily="Times New Roman" FontWeight="Bold" RenderTransformOrigin="0.388,1.003"/>
    </Grid>
</Window>
